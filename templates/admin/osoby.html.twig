{% extends 'base.html.twig' %}

{% block title %}
	Admin - Lista osób
{% endblock %}

{% block body %}

	<div class="container text-center">
		<div class="row align-items-start">
			<div class="col">
                <h2>Lista osób</h2>
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">Imię</th>
							<th scope="col">Nazwisko</th>
							<th scope="col">Opcje</th>
						</tr>
					</thead>
					<tbody>
                        {% for osoba in pager %}
						<tr>
							<td>{{ osoba.imie }}</td>
							<td>{{ osoba.nazwisko }}</td>
							<td>
                                <a class="btn btn-primary btn-sm" href="{{ path('app_osoby_edit', {id: osoba.id} ) }}">Edit</a>
                                <a class="btn btn-danger btn-sm" href="{{ path('app_osoby_delete', {id: osoba.id} ) }}">Delete</a>
                            </td>
						</tr>
                        {% endfor %}
					</tbody>
				</table>
			</div>
		</div>

        {{ pagerfanta(pager) }}
	</div>


{% endblock %}
